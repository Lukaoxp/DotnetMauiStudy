<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Converters.Views.NotasAlunosView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converter="clr-namespace:Converters.Converters"
    xmlns:service="clr-namespace:Converters.Services"
    Title="NotasAlunosView">
    <ContentPage.Resources>
        <converter:NotaColorConverter x:Key="colorConverter" />
    </ContentPage.Resources>
    <VerticalStackLayout Padding="10">
        <ListView
            x:Name="listAlunos"
            HasUnevenRows="True"
            SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid ColumnDefinitions="*,*">
                            <Label
                                FontSize="20"
                                HorizontalOptions="Start"
                                Text="{Binding Nome}" />
                            <Label
                                Grid.Column="1"
                                FontSize="20"
                                HorizontalOptions="End"
                                Text="{Binding Nota}"
                                TextColor="{Binding Nota, Converter={StaticResource colorConverter}}" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>