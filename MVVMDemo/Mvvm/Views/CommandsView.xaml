<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MVVM_Demo.Mvvm.Views.CommandsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:MVVM_Demo.Mvvm.ViewModels"
    Title="CommandsView">
    <ContentPage.BindingContext>
        <vm:CommandViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout Spacing="50" VerticalOptions="Center">
        <VerticalStackLayout>
            <Label
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Center"
                Text="Botao command"
                VerticalOptions="Center" />
            <Button
                x:Name="btnAlerta"
                Command="{Binding ButtonClickCommand}"
                Text="Exibir Alerta" />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Center"
                Text="SearchBar - Passando parÃ¢metros"
                VerticalOptions="Center" />

            <SearchBar
                x:Name="searchBar"
                SearchCommand="{Binding SearchCommand}"
                SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>