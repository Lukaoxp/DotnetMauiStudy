<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MVVM_Demo.Mvvm.Views.TimesView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Liga dos campeÃµes"
    BackgroundColor="AliceBlue">
    <CollectionView x:Name="cv1" ItemsSource="{Binding Times}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid
                    Margin="10,0"
                    Padding="20"
                    ColumnDefinitions="Auto,Auto"
                    ColumnSpacing="20"
                    RowDefinitions="Auto">
                    <Image
                        Grid.Column="0"
                        Aspect="AspectFit"
                        HeightRequest="70"
                        Source="{Binding Escudo}"
                        WidthRequest="70" />
                    <Label
                        Grid.Column="1"
                        FontAttributes="Bold"
                        FontSize="20"
                        HorizontalOptions="Center"
                        Text="{Binding Nome}"
                        TextColor="CadetBlue"
                        VerticalOptions="Center" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>