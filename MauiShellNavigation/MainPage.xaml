<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiShellNavigation.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout
        Padding="10"
        Spacing="20"
        VerticalOptions="Center">
        <Entry
            x:Name="txtNome"
            FontSize="30"
            Placeholder="Informe o nome" />
        <Button
            Clicked="Button_Clicked"
            FontSize="30"
            Text="Navegar para HomePage" />
        <Button
            Clicked="Button_Clicked_1"
            FontSize="30"
            Text="Navegar para Page2" />
    </VerticalStackLayout>

</ContentPage>
