<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppLanches.Pages.ListaProdutosPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ListaProdutosPage">
    <CollectionView
        x:Name="CvProdutos"
        Margin="10"
        SelectionChanged="CvProdutos_SelectionChanged"
        SelectionMode="Single">
        <CollectionView.ItemsLayout>
            <GridItemsLayout
                HorizontalItemSpacing="10"
                Orientation="Vertical"
                Span="2"
                VerticalItemSpacing="10" />
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border
                    Padding="10"
                    StrokeShape="RoundRectangle 15"
                    VerticalOptions="Start">
                    <Grid RowDefinitions="Auto, Auto, Auto" RowSpacing="5">
                        <Image
                            Aspect="AspectFill"
                            HeightRequest="150"
                            Source="{Binding CaminhoImagem}"
                            WidthRequest="150" />

                        <Label
                            Grid.Row="1"
                            FontAttributes="Bold"
                            FontSize="Medium"
                            LineBreakMode="WordWrap"
                            MaxLines="2"
                            Text="{Binding Nome}" />
                        <Label
                            Grid.Row="2"
                            FontAttributes="Bold"
                            FontSize="Medium"
                            Text="{Binding Preco, StringFormat='R$ {0:F2}'}" />
                    </Grid>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>