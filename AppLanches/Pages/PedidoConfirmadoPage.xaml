<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppLanches.Pages.PedidoConfirmadoPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="PedidoConfirmadoPage">
    <Grid
        Padding="20"
        HorizontalOptions="Center"
        RowDefinitions="*,*,*"
        VerticalOptions="Center">
        <Image
            Aspect="AspectFit"
            HeightRequest="300"
            Source="confirmado.gif"
            WidthRequest="300" />
        <Label
            Grid.Row="1"
            Margin="0,20,0,0"
            FontSize="24"
            HorizontalOptions="Center"
            Text="Seu pedido foi confirmado!"
            TextColor="DarkBlue"
            VerticalOptions="Center" />
        <Button
            x:Name="BtnRetornar"
            Grid.Row="2"
            Clicked="BtnRetornar_Clicked"
            Text="Retornar"
            VerticalOptions="Center" />
    </Grid>
</ContentPage>