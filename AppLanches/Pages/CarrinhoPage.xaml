<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppLanches.Pages.CarrinhoPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="CarrinhoPage">
    <Grid
        Margin="20"
        RowDefinitions="Auto,8*,Auto,Auto"
        RowSpacing="20">
        <CollectionView x:Name="CvCarrinho" Grid.Row="1">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout ItemSpacing="10" Orientation="Vertical" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Padding="10"
                        BackgroundColor="Transparent"
                        BorderColor="LightBlue"
                        CornerRadius="10">
                        <Grid
                            ColumnDefinitions="3*, 6*, 1*"
                            ColumnSpacing="15"
                            RowDefinitions="Auto, Auto, Auto"
                            RowSpacing="5">
                            <Image
                                Grid.RowSpan="3"
                                Aspect="Fill"
                                HeightRequest="80"
                                Source="{Binding CaminhoImagem}"
                                WidthRequest="80" />
                            <Label
                                Grid.Row="0"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                FontAttributes="Bold"
                                FontSize="Subtitle"
                                HorizontalOptions="Start"
                                LineBreakMode="TailTruncation"
                                Text="{Binding ProdutoNome}"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                FontAttributes="Bold"
                                HorizontalOptions="Start"
                                Text="{Binding PrecoUnitario, StringFormat='R$ {0:F2}'}"
                                VerticalOptions="Center" />
                            <HorizontalStackLayout
                                Grid.Row="2"
                                Grid.Column="1"
                                Spacing="10">
                                <Button
                                    x:Name="BtnDecrementar"
                                    Padding="0"
                                    BackgroundColor="White"
                                    BorderColor="Black"
                                    BorderWidth="1"
                                    Clicked="BtnDecrementar_Clicked"
                                    CornerRadius="8"
                                    FontAttributes="Bold"
                                    HeightRequest="25"
                                    HorizontalOptions="Center"
                                    Text="-"
                                    TextColor="Black"
                                    VerticalOptions="Center"
                                    WidthRequest="25" />
                                <Label
                                    x:Name="LblQuantidade"
                                    FontAttributes="Bold"
                                    Text="{Binding Quantidade}"
                                    TextColor="#80574D"
                                    VerticalTextAlignment="Center" />
                                <Button
                                    x:Name="BtnIncrementar"
                                    Padding="0"
                                    BackgroundColor="#18565f"
                                    Clicked="BtnIncrementar_Clicked"
                                    CornerRadius="8"
                                    FontAttributes="Bold"
                                    HeightRequest="25"
                                    HorizontalOptions="Center"
                                    Text="+"
                                    VerticalOptions="Center"
                                    WidthRequest="25" />
                            </HorizontalStackLayout>

                            <ImageButton
                                x:Name="BtnDeletar"
                                Grid.Row="2"
                                Grid.Column="2"
                                Clicked="BtnDeletar_Clicked"
                                HeightRequest="25"
                                HorizontalOptions="End"
                                Source="delete"
                                VerticalOptions="End"
                                WidthRequest="25" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Frame
            Grid.Row="2"
            Padding="10"
            BackgroundColor="White"
            BorderColor="White">
            <Grid ColumnDefinitions="8*,2*" RowDefinitions="Auto,Auto">
                <Label
                    FontAttributes="Bold"
                    Text="Endereço de Entrega"
                    VerticalOptions="Start" />
                <ImageButton
                    x:Name="BtnEditaEndereco"
                    Grid.Column="1"
                    Padding="0"
                    Clicked="BtnEditaEndereco_Clicked"
                    HeightRequest="25"
                    HorizontalOptions="End"
                    Source="edit"
                    VerticalOptions="Start"
                    WidthRequest="25" />
                <Label
                    x:Name="LblEndereco"
                    Grid.Row="1"
                    Grid.ColumnSpan="2" />
            </Grid>
        </Frame>
        <Frame
            Grid.Row="3"
            Padding="10"
            BackgroundColor="#18565f"
            BorderColor="Transparent">
            <Grid
                Padding="10,0,0,0"
                ColumnDefinitions="5*, 5*"
                RowDefinitions="Auto, Auto">
                <Label
                    FontAttributes="Bold"
                    Text="Preço Total"
                    TextColor="White" />
                <Label Grid.Row="1" TextColor="White">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span
                                    FontAttributes="Bold"
                                    FontSize="Medium"
                                    Text="R$ " />
                                <Span
                                    x:Name="LblPrecoTotal"
                                    FontAttributes="Bold"
                                    FontSize="Medium" />
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <HorizontalStackLayout
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Margin="0,0,10,0"
                    HorizontalOptions="End"
                    Spacing="10">
                    <Label
                        BackgroundColor="#18565f"
                        FontAttributes="Bold"
                        Text="Confirmar Pedido"
                        TextColor="White"
                        VerticalOptions="Center" />
                    <Image
                        HeightRequest="25"
                        Source="rightarrow"
                        VerticalOptions="Center"
                        WidthRequest="25" />

                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer x:Name="TapConfirmarPedido" Tapped="TapConfirmarPedido_Tapped" />
                    </HorizontalStackLayout.GestureRecognizers>
                </HorizontalStackLayout>
            </Grid>
        </Frame>
    </Grid>
</ContentPage>