<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppLanches.Pages.PerfilPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="PerfilPage">
    <Grid RowDefinitions="Auto, 5*, 1*" RowSpacing="0">
        <VerticalStackLayout
            Padding="20"
            BackgroundColor="Cyan"
            Spacing="1"
            VerticalOptions="Start">
            <ImageButton
                x:Name="ImgBtnPerfil"
                Padding="5"
                Aspect="AspectFill"
                Clicked="ImgBtnPerfil_Clicked"
                CornerRadius="60"
                HeightRequest="120"
                Source="perfilconfig.png"
                WidthRequest="120" />
            <Label
                x:Name="LblNoemUsuario"
                HorizontalOptions="Center"
                TextColor="Black" />
        </VerticalStackLayout>
        <VerticalStackLayout
            Grid.Row="1"
            Margin="20"
            Spacing="20">
            <HorizontalStackLayout Spacing="10">
                <Image HeightRequest="30" Source="pedidos.png" />
                <Label
                    FontAttributes="Bold"
                    FontSize="Medium"
                    Text="Meus Pedidos"
                    VerticalOptions="End" />
                <HorizontalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer x:Name="Pedidos" Tapped="Pedidos_Tapped" />
                </HorizontalStackLayout.GestureRecognizers>
            </HorizontalStackLayout>
            <BoxView
                BackgroundColor="Grey"
                HeightRequest="1"
                VerticalOptions="Center" />
            <HorizontalStackLayout Spacing="10">
                <Image HeightRequest="30" Source="perfilconfig.png" />
                <Label
                    FontAttributes="Bold"
                    FontSize="Medium"
                    Text="Minha Conta"
                    VerticalOptions="End" />
                <HorizontalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer x:Name="MinhaConta" Tapped="MinhaConta_Tapped" />
                </HorizontalStackLayout.GestureRecognizers>
            </HorizontalStackLayout>
            <BoxView
                BackgroundColor="Grey"
                HeightRequest="1"
                VerticalOptions="Center" />
            <HorizontalStackLayout Spacing="10">
                <Image HeightRequest="30" Source="perguntas.png" />
                <Label
                    FontAttributes="Bold"
                    FontSize="Medium"
                    Text="Perguntas Frequentes"
                    VerticalOptions="End" />
                <HorizontalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer x:Name="Perguntas" Tapped="Perguntas_Tapped" />
                </HorizontalStackLayout.GestureRecognizers>
            </HorizontalStackLayout>
        </VerticalStackLayout>
        <ImageButton
            x:Name="BtnLogout"
            Grid.Row="2"
            Padding="5"
            Background="Transparent"
            Clicked="BtnLogout_Clicked"
            HeightRequest="60"
            HorizontalOptions="Center"
            Source="logout.png"
            ToolTipProperties.Text="Logout"
            WidthRequest="60" />
    </Grid>
</ContentPage>