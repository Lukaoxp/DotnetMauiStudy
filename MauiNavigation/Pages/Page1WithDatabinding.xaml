<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiNavigation.Pages.Page1WithDatabinding"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Page1WithDatabinding">
    <VerticalStackLayout>
        <Entry x:Name="txtNome" Placeholder="Informe o nome" />
        <Entry x:Name="txtEmail" Placeholder="Informe o email" />
        <Entry x:Name="txtIdade" Placeholder="Informe a idade" />
        <Button
            x:Name="btn1"
            Clicked="btn1_Clicked"
            Text="Exibir detalhes" />
    </VerticalStackLayout>
</ContentPage>