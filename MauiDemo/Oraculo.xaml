<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDemo.Oraculo"
             Title="Oraculo">
    <VerticalStackLayout>
        <Label HorizontalOptions="Center" FontSize="Large">O Oráculo</Label>
        <Image Source="oraculo.jpg" HeightRequest="300" WidthRequest="100"></Image>
        <Label HorizontalOptions="Center" FontSize="Medium">Qual a sua pergunta?</Label>
        <Entry HorizontalOptions="Center"></Entry>
        <Button HorizontalOptions="Center" Text="Enviar pergunta" Clicked="Button_Clicked"></Button>
        <VerticalStackLayout IsVisible="False" x:Name="Resposta">
            <Label HorizontalOptions="Center" TextColor="Red" FontSize="Medium">O oráculo revela:</Label>
            <Label HorizontalOptions="Center" FontAttributes="Bold" FontSize="Large">50/50</Label>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>