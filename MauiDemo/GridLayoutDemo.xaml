    <Grid BackgroundColor="White" Padding="20, 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,10,0,0">
            <Image Source="dotnet_bot.png" VerticalOptions="Start" Margin="0,3,0,0" Opacity="0.6"/>
        </StackLayout>

        <Grid Grid.Row="1" RowDefinitions="*,50,50,Auto,40,40,*">
            <Image Grid.Row="0" Source="oraculo.jpg" VerticalOptions="EndAndExpand"/>
            <Entry Grid.Row="1" Placeholder="Email ou telefone" FontSize="16"/>
            <Entry Grid.Row="2" Placeholder="Senha" FontSize="16"/>
            <Button Grid.Row="3" Text="LOGIN" BackgroundColor="#3897f0"/>
            <Label Grid.Row="4" Text="Problemas no Login?" HorizontalOptions="Center" />
            <Grid Grid.Row="5" ColumnDefinitions="*, Auto, *">
                <Label Grid.Column="0" BackgroundColor="#bababa" HeightRequest="1"/>
                <Image Grid.Column="1" Source="dotnet_bot.png" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
                <Label Grid.Column="2"  BackgroundColor="#bababa" HeightRequest="1"/>
            </Grid>
            <Label Grid.Row="6" Text="Login com Facebook" HorizontalOptions="Center"/>
        </Grid>
        <VerticalStackLayout Grid.Row="2">
            <Label BackgroundColor="#bababa" HeightRequest="1"/>
            <Label HorizontalOptions="Center" Text="NÃ£o possui uma Conta? Registre-se." />
        </VerticalStackLayout>
    </Grid>

