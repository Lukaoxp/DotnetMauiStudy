<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiStyles.DynamicStylePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="DynamicStylePage">
    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="DarkCyan" />
        </Style>
        <Style x:Key="midnightStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="MidnightBlue" />
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout VerticalOptions="Center">
        <Button Style="{DynamicResource dynamicStyle}" Text="Botao estiloso" />
        <Button Clicked="Button_Clicked" Text="Alterar estilo" />
    </VerticalStackLayout>
</ContentPage>