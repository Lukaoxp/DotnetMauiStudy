<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiDemoDataBinding.Pages.NotifyBinding"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="NotifyBinding">
    <VerticalStackLayout>
        <Entry FontSize="40" Text="{Binding Nome}" />

        <Entry FontSize="40" Text="{Binding Preco, StringFormat='R$ {0:F2}'}" />

        <Entry FontSize="40" Text="{Binding Estoque, StringFormat='Quantidade {0}'}" />

        <Button
            x:Name="btnAtualiza"
            Clicked="btnAtualiza_Clicked"
            FontSize="20"
            Text="Atualizar produto" />
    </VerticalStackLayout>
</ContentPage>